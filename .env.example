# Platform API (no credentials needed - token auth)
WORKOFLOW_API_URL=http://localhost:8000

# Tool filtering (optional, comma-separated)
# Leave empty or unset to expose ALL tools
# Examples: jira,confluence,system.searxng_tool
TOOL_TYPES=

# Cache TTL for tool definitions (seconds)
CACHE_TTL_SECONDS=600

# Tracing (Phoenix integration)
OTEL_SERVICE_NAME=workoflow-mcp
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_TRACES_EXPORTER=otlp
